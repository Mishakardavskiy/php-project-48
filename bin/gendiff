#!/usr/bin/env php
<?php

namespace PhpProject48\Gendiff;

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';

if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

use Docopt;
use function PhpProject48\Parser\parsing;
use function PhpProject48\Parser\genDiff;

$doc =  <<<DOC
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                     Show this screen
  -v --version                  Show version
  --format <fmt>                Report format [default: stylish]

DOC;

$args = Docopt::handle($doc, array('version'=>'Generate diff'));//Docopt::handle - обращение к статическому методу
foreach ($args as $k => $v)
 echo $k . ': '. json_encode($v) . PHP_EOL;

$file1 = parsing($args['<firstFile>']);
//var_dump($file1);
$file2 = parsing($args['<secondFile>']);
$diff = genDiff($file1, $file2);
//var_dump($file1);
//var_dump($file2);
print_r($diff);